@section Scripts {
    <script>
        // تأكد من أن القيمة يتم تعيينها بشكل صحيح
        let currentPurchaseOrderId = parseInt('@Model.Id');
        let isOTPRequested = false;

        console.log('Purchase Order ID:', currentPurchaseOrderId); // للتأكد من القيمة

        document.addEventListener('DOMContentLoaded', function() {
            // طلب OTP مباشرة عند النقر على التوقيع
            const signatureSection = document.getElementById('signatureSection');
            if (signatureSection) {
                signatureSection.addEventListener('click', async function() {
                    if (!@Json.Serialize(Model.IsSigned)) {
                        await requestOTP();
                    }
                });
            }

            // التعامل مع إرسال نموذج OTP
            document.getElementById('otpForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                await verifyOTP();
            });

            // إعداد إدخال OTP
            setupOTPInputs();
        });

        // دالة طلب OTP مباشرة
        async function requestOTP() {
            try {
                // تأكد من أن currentPurchaseOrderId له قيمة صحيحة
                if (!currentPurchaseOrderId || currentPurchaseOrderId === 0) {
                    showAlert('error', 'خطأ: لم يتم التعرف على رقم أمر الشراء');
                    return;
                }

                showAlert('info', 'جاري إرسال رمز OTP إلى هاتفك...');

                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                console.log('Sending purchaseOrderId:', currentPurchaseOrderId); // للتتبع

                // التصحيح: استخدام purchaseOrderId بدلاً من currentPurchaseOrderId
                const response = await fetch('/Signature/RequestOTPAjax', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token,
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        purchaseOrderId: currentPurchaseOrderId  // هذا الاسم يجب أن يتطابق مع المعلمة في C#
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                console.log('OTP Response:', result); // للتتبع

                if (result.success) {
                    isOTPRequested = true;
                    $('#otpModal').modal('show');

                    // تفعيل إدخال OTP
                    const firstOtpInput = document.querySelector('#otpModal .otp-digit');
                    if (firstOtpInput) {
                        firstOtpInput.focus();
                    }

                    showAlert('success', 'تم إرسال رمز OTP إلى هاتفك. صالح لمدة ' + result.expiryMinutes + ' دقيقة');
                } else {
                    showAlert('error', 'فشل في إرسال OTP: ' + result.error);
                }
            } catch (error) {
                console.error('Error in requestOTP:', error);
                showAlert('error', 'حدث خطأ أثناء طلب OTP: ' + error.message);
            }
        }

        // دالة تأكيد OTP
        async function verifyOTP() {
            const otp = getOTPValue();

            if (otp.length !== 4) {
                showAlert('error', 'يرجى إدخال رمز OTP مكون من 4 أرقام');
                return;
            }

            const submitBtn = document.querySelector('#otpForm button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-1"></i>جاري التوقيع...';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const response = await fetch('/Signature/VerifyAndSignAjax', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token,
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        purchaseOrderId: currentPurchaseOrderId, // استخدام نفس الاسم
                        otp: otp,
                        signatureImage: '' // استخدام التوقيع المسجل
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();

                if (result.success) {
                    // تحديث واجهة المستخدم
                    updateSignatureUI(result.signaturePath);
                    $('#otpModal').modal('hide');
                    showAlert('success', 'تم التوقيع بنجاح');

                    // إعادة تحميل الصفحة بعد ثانيتين لتحديث البيانات
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    showAlert('error', 'فشل في التوقيع: ' + result.error);
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = 'تأكيد التوقيع';
                }
            } catch (error) {
                console.error('Error in verifyOTP:', error);
                showAlert('error', 'حدث خطأ أثناء التوقيع: ' + error.message);
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'تأكيد التوقيع';
            }
        }

        // باقي الدوال تبقى كما هي...
        function setupOTPInputs() {
            const otpInputs = document.querySelectorAll('#otpModal .otp-digit');

            otpInputs.forEach((input, index) => {
                input.addEventListener('input', function(e) {
                    if (this.value.length === 1 && index < otpInputs.length - 1) {
                        otpInputs[index + 1].focus();
                    }
                });

                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Backspace' && this.value === '' && index > 0) {
                        otpInputs[index - 1].focus();
                    }
                });

                input.addEventListener('keypress', function(e) {
                    if (!/[0-9]/.test(e.key)) {
                        e.preventDefault();
                    }
                });
            });
        }

        function getOTPValue() {
            const otpDigits = document.querySelectorAll('#otpModal .otp-digit');
            let otp = '';
            otpDigits.forEach(digit => {
                otp += digit.value;
            });
            return otp;
        }

        function updateSignatureUI(signaturePath) {
            const signatureSection = document.getElementById('signatureSection');
            signatureSection.innerHTML = `
                <img src="${signaturePath}" alt="Signature" style="max-height: 40px; max-width: 100px;">
                <div class="small text-muted">تم التوقيع بتاريخ: ${new Date().toLocaleString('ar-EG')}</div>
            `;
            signatureSection.style.cursor = 'default';
            signatureSection.classList.remove('signature-trigger');
        }

        function showAlert(type, message) {
            if (typeof toastr !== 'undefined') {
                if (type === 'success') {
                    toastr.success(message);
                } else if (type === 'error') {
                    toastr.error(message);
                } else if (type === 'info') {
                    toastr.info(message);
                }
            } else if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: type,
                    text: message,
                    timer: 3000,
                    showConfirmButton: false
                });
            } else {
                alert(message);
            }
        }

              function printDiv(divId) {
            const printContent = document.getElementById(divId).innerHTML;
            const originalContent = document.body.innerHTML;

            document.body.innerHTML = printContent;
            window.print();
            document.body.innerHTML = originalContent;
            window.location.reload(); // لإعادة تحميل الصفحة إذا لزم الأمر
        }

        // إعادة تعيين النموذج عند إغلاق الـ Modal
        $('#otpModal').on('hidden.bs.modal', function () {
            const submitBtn = document.querySelector('#otpForm button[type="submit"]');
            submitBtn.disabled = false;
            submitBtn.innerHTML = 'تأكيد التوقيع';

            const otpDigits = document.querySelectorAll('#otpModal .otp-digit');
            otpDigits.forEach(digit => {
                digit.value = '';
            });

            const errorDiv = document.querySelector('#otpModal .invalid-feedback');
            errorDiv.style.display = 'none';
        });
                document.querySelectorAll(".otp-digit").forEach((el, index, arr) => {
            el.addEventListener("input", () => {
                if (el.value.length === 1 && index < arr.length - 1) {
                    arr[index + 1].focus();
                }
            });
        });

    </script>
